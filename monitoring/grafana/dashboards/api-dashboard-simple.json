{
  "dashboard": {
    "id": null,
    "title": "API Monitoring Dashboard",
    "tags": ["api", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Services Overview",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "django_http_requests_total",
            "refId": "A",
            "format": "table"
          }
        ]
      },
      {
        "id": 2,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(django_http_requests_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(process_resident_memory_bytes)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Service Status",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "up",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum(rate(django_http_requests_total[1m])) by (job)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Response Time",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "targets": [
          {
            "expr": "avg(django_http_request_duration_seconds_sum / django_http_request_duration_seconds_count) by (job)",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
